<?xml version="1.0"  encoding="ISO-8859-1"?>
<!DOCTYPE Configure PUBLIC "-//Jetty//Configure//EN" "http://www.eclipse.org/jetty/configure.dtd">

<Configure class="org.eclipse.jetty.webapp.WebAppContext">
    <!-- USER: Change this class name to your implementation -->
    <New id="sessionManager" class="org.neolumin.simpleOrm.SimpleOrmJettySessionManager"/>
    <Get id="server" name="server"/>

    <Set name="sessionHandler">
        <New class="org.neolumin.simpleOrm.SimpleOrmJettySessionHandler">
            <Arg>
                <Ref id="sessionManager"/>
            </Arg>
        </New>
    </Set>

    <Ref id="server">
        <Set name="sessionIdManager">
            <New class="org.neolumin.simpleOrm.SimpleOrmJettySessionIdManager">
                <Arg>
                    <Ref id="server"/>
                </Arg>
                <Arg>
                    <Ref id="sessionManager"/>
                </Arg>
            </New>
        </Set>
    </Ref>
</Configure>